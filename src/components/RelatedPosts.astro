---
import {slugify, formatDate} from "../js/utils";

const {relatedPosts} = Astro.props;

---

{
    relatedPosts.map((post) => (
        <div class="post">
            <h3 class="text-[15px]">
                <a href={post.url}>{post.frontmatter.title}</a>
                
                </h3>
                <small class="flex">
                 <a class="text-[12px] text-neutral-500 pl-[12px]" href={`/author/${slugify(post.frontmatter.author)}/`}>
                    {post.frontmatter.author}
                    </a><span class="text-[14px] text-neutral-600">
                    . {formatDate(post.frontmatter.pubDate)}</span>

                    </small>
            </div>
    ))
}